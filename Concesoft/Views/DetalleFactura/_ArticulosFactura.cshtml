@model IEnumerable<Concesoft.Models.DetalleFacturaModels>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RepuestoAccesorioModels.NombreArticulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehiculoModels.NombreVehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FacturaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RepuestoAccesorioModels.NombreArticulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehiculoModels.NombreVehiculo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacturaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotal)
        </td>
        <td>
            @Html.ActionLink(
                linkText: "Editar",
                actionName: "Edit",
                controllerName: "DetalleFactura",
                routeValues: new
                {
                    id = item.Id
                },
                htmlAttributes: null)

            @Html.ActionLink(
                linkText: "Eliminar",
                actionName: "Delete",
                controllerName: "DetalleFactura",
                routeValues: new
                {
                    id = item.Id
                },
                htmlAttributes: null)
        </td>
    </tr>
}

</table>
